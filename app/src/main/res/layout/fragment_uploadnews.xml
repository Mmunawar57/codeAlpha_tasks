<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.admin.UploadNewsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:src="@drawable/icon_back" />
        <TextView
            android:id="@+id/btnSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Upload New Event" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/layoutTop"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLinear"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:hint="Event Title"
                style="@style/TextAppearance.AppCompat.Headline"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/txtDetails"
                android:backgroundTint="@color/cardColor"
                android:background="@drawable/edit_text"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="top"
                android:hint="write event details here"
                android:layout_marginHorizontal="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/image_layout"
                android:layout_marginTop="10dp"
                android:src="@drawable/alll"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/imgFeed"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:id="@+id/iconCalender"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txtDate"
                    android:src="@drawable/icon_calendar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtDate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/txtDateValue"
                    app:layout_constraintStart_toEndOf="@id/iconCalender"
                    android:layout_marginStart="10dp"
                    android:text="Date"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDateValue"
                    android:textStyle="bold"
                    android:hint="Mention date here."
                    android:background="@drawable/edit_text"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/txtDate"
                    app:layout_constraintTop_toBottomOf="@id/txtDate"
                 />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:id="@+id/iconLocation"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txtLocation"
                    android:src="@drawable/icon_location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtLocation"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/txtLocationValue"
                    app:layout_constraintStart_toEndOf="@id/iconLocation"
                    android:layout_marginStart="10dp"
                    android:text="Location"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLocationValue"
                    android:textStyle="bold"
                    android:background="@drawable/edit_text"
                    android:hint="Mark location here."
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@id/txtLocation"
                    app:layout_constraintTop_toBottomOf="@id/txtLocation"
                   />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/btnSave"
                android:layout_marginHorizontal="50dp"
                app:cornerRadius="15dp"
                android:textSize="15dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/icon_upload"
                android:layout_marginVertical="10dp"
                android:textColor="@color/white"
                android:backgroundTint="#3646A8"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#5EFFFFFF"/>
    <ProgressBar
        android:id="@+id/prgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="false"
        android:indeterminateTint="#3747AE"
        />


</androidx.constraintlayout.widget.ConstraintLayout>